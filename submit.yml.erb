---
batch_connect:
  template: "basic"
  conn_params:
    - csrf_token
script:
# See the Slurm section at https://osc.github.io/ood-documentation/master/enable-desktops/custom-job-submission.html
  native:
    - "--mem-per-cpu"
    - "25G"
    - "--time"
    - "<%= duration %>"
    - "--cpus-per-task"
    - "<%= session_size.blank? ? 4 : session_size.to_i %>"
